<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textAppearance">@style/TextAppearance</item>
  </style>

  <style name="AppTheme.Yellow" parent="AppTheme">
    <item name="colorPrimary">@color/themeYellowPrimary</item>
    <item name="colorPrimaryDark">@color/themeYellowPrimaryDark</item>
    <item name="colorAccent">@color/themeYellowAccent</item>
  </style>

  <style name="AppTheme.Purple" parent="AppTheme">
    <item name="colorPrimary">@color/themePurplePrimary</item>
    <item name="colorPrimaryDark">@color/themePurplePrimaryDark</item>
    <item name="colorAccent">@color/themePurpleAccent</item>
  </style>

  <style name="TextAppearance" parent="TextAppearance.AppCompat"/>

</resources>
